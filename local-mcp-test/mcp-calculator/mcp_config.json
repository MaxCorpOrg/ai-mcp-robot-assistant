{
  "mcpServers": {
    "simple-tools": {
      "type": "stdio",
      "command": "python",
      "args": ["tools_simple.py"]
    },
    "knowledge-tools": {
      "type": "stdio",
      "command": "python",
      "args": ["tools_knowledge.py"],
      "env": {
        "KB_ROOT": "/opt/ai_robot/shared/kb"
      }
    },
    "email-tools": {
      "type": "stdio",
      "command": "python",
      "args": ["tools_email.py"],
      "disabled": true
    },
    "remote-sse-server": {
      "type": "sse",
      "url": "https://api.example.com/sse",
      "disabled": true
    },
    "remote-http-server": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "disabled": true
    }
  }
}
